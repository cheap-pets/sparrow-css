* {
  box-sizing: border-box;
  -webkit-touch-callout: none;
  user-select: none;
}
body {
  margin: 0;
}

a {
  color: $link-text-color;
  cursor: pointer;
  text-decoration: none;
}
a:hover {
  color: $link-hover-text-color;
}
a.negative {
  color: $link-negative-text-color;
}
a.negative:hover {
  color: $link-negative-hover-text-color;
}

.hidden {
  visibility: hidden;
}

.outline {
  border: 1px solid $outline-color;
}
.outline-dotted {
  border-style: dotted;
}

:disabled,
*[disabled] {
  color: $disabled-text-color;
}

.middle {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.transparent {
  background-color: transparent !important;
}
