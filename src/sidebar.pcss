.sidebar {
  position: absolute;
  top: 0;
  left: 0;
  width: 100px;
  bottom: 0;
  overflow: hidden;
  background-color: $grey1;
}
.sidebar > a {
  display: block;
  color: $grey4;
  cursor: pointer;
  height: 100px;
  font-size: 14px;
  text-align: center;
  position: relative;
}
.sidebar > a:hover {
  color: $white;
  background-color: rgba(255, 255, 255, .15);
}
.sidebar > a.active {
  color: $white;
  background-color: $blue2;
}
.sidebar > a .icon {
  font-size: 24px;
}
.sidebar > a > :only-child {
  position: absolute;
  width: 100%;
  top: 50%;
  transform: translateY(-50%);
}
.sidebar > a .icon + * {
  margin-top: 10px;
}

.sidebar + .content {
  left: 100px;
}

.sidebar.menu {
  padding: 10px 0;
  width: 200px;
}

.sidebar.menu + .content {
  left: 200px;
}

.sidebar.menu > a {
  line-height: 24px;
  padding: 10px 15px;
  height: auto;
  text-align: left;
}

.sidebar.menu > a > * {
  display: inline-block;
  font-size: 14px;
}

.sidebar.menu > a .icon + * {
  margin-top: 0;
  margin-left: 10px;
}
