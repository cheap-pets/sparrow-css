.sidebar {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100px;
  overflow: hidden;
  background-color: $sidebar-color;
}
.sidebar > a {
  position: relative;
  display: block;
  height: 100px;
  font-size: 14px;
  text-align: center;
  color: $sidebar-item-text-color;
  cursor: pointer;
}
.sidebar > a:hover {
  color: $sidebar-item-hover-text-color;
  background-color: $sidebar-item-hover-color;
}
.sidebar > a.active {
  color: $sidebar-item-active-text-color;
  background-color: $sidebar-item-active-color;
}
.sidebar > a .icon {
  font-size: 24px;
}
.sidebar > a > :only-child {
  position: absolute;
  top: 50%;
  width: 100%;
  transform: translateY(-50%);
}
.sidebar > a .icon + * {
  margin-top: 10px;
}

.sidebar.menu {
  width: 200px;
  padding: 10px 0;
}

.sidebar.menu > a {
  height: auto;
  padding: 10px 15px;
  line-height: 24px;
  text-align: left;
}

.sidebar.menu > a > * {
  display: inline-block;
  font-size: 14px;
}

.sidebar.menu > a .icon + * {
  margin-top: 0;
  margin-left: 10px;
}
