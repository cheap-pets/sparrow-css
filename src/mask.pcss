.modal-mask,
.area-mask {
  z-index: 200;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: block;
  overflow: hidden;
  background-color: rgba(0, 0, 0, .1);
}

.modal-mask {
  position: fixed;
  visibility: hidden;

  &.active {
    visibility: visible;
  }
}

.area-mask {
  position: absolute;
  display: none;

  &.active {
    display: block;
  }
}
