.popup-group,
[popup-group],
.dropdown-group {
  position: relative;
  overflow: visible;
}
.dropdown {
  position: absolute;
  z-index: 200;
  left: 0;
  display: block;
  padding: 0;
  border: 1px solid $dropdown-border-color;
  overflow: auto;
  visibility: hidden;
  background-color: $dropdown-color;
  opacity: 0;
  @mixin shadow;
  @mixin transition-opacity;
}
.dropdown.menu {
  padding-top: 4px;
  padding-bottom: 4px;
  border: 0;
}
.dropdown:not(.top) {
  top: 100%;
  margin-top: 1px;
}
.dropdown.top {
  bottom: 100%;
  margin-bottom: 1px;
}
.input-group > .dropdown,
.dropdown-group > .dropdown {
  min-width: 100%;
}
.dropdown.right {
  left: auto;
  right: 0;
}
.dropdown.active {
  visibility: visible;
  opacity: 1;
}
