.bar {
  position: relative;
  display: block;
  height: 44px;
  padding: 5px;
  overflow-y: visible;
  white-space: nowrap;
  background-color: $bar-color;
}
.bar.header,
.bar.footer {
  position: absolute;
}
.bar-center {
  text-align: center;
}
.bar-right {
  float: right;
}
.bar-right > .input-group > input {
  width: 200px;
}

.bar > label:first-child {
  margin-left: 10px;
}
.bar input:not(:first-child),
.bar .dropdown-group:not(:first-child),
.bar .input-group:not(:first-child),
.bar .btn:not(:first-child),
.bar .btn-group:not(:first-child) {
  margin-left: 5px;
}
.bar .btn-group.small {
  margin-top: 5px;
}
.bar .btn-group > .btn,
.bar .input-group > input {
  margin-top: 0;
  margin-left: 0
}
.bar > .fit {
  width: 100%;
}
.bar.fit {
  display: table;
  width: 100%;
}
.bar.fit > * {
  display: table-cell
}
.bar.fit input {
  width: 100%;
}

.bar-menu {
  height: 34px;
  padding: 0 5px;
}
.bar-tab {
  display: table;
  table-layout: fixed;
  width: 100%;
  padding: 0;
}
.bar-tab > * {
  display: table-cell;
  width: 1%;
  height: 100%;
  padding: 0;
  text-align: center;
  vertical-align: middle;
}
.bar-tab > div {
  padding: 0 5px;
}
.bar-tab > div > * {
  width: 100%;
}
.bar-tab > .btn > p {
  margin: 0;
  font-size: 12px;
  line-height: 14px; 
}

.bar.bar-tab > *,
.bar.bar-menu > *,
.bar.bar-tab > .btn,
.bar.bar-menu > .btn {
  margin-left: 0;
  border-radius: 0;
}

.bar-large {
  height: 50px;
  padding: 8px 10px;
}
.bar-large > label:first-child {
  margin-left: 15px;
}
